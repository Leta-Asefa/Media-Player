<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <bottom>
      <VBox prefHeight="58.0" prefWidth="600.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
         <children>
            <Slider fx:id="statusBar" prefHeight="56.0" prefWidth="600.0" />
            <HBox alignment="TOP_CENTER" prefHeight="57.0" prefWidth="600.0">
               <children>
                  <Button fx:id="previousButton" mnemonicParsing="false" onAction="#previous" prefHeight="25.0" prefWidth="56.0" text="prev" />
                  <Button fx:id="play_pauseButton" mnemonicParsing="false" onAction="#play_pause" prefHeight="25.0" prefWidth="85.0" text="play" />
                  <Button fx:id="nextButton" mnemonicParsing="false" onAction="#next" prefHeight="25.0" prefWidth="56.0" text="next" />
                  <Button fx:id="chooseFileButton" mnemonicParsing="false" onAction="#chooseFile" prefHeight="25.0" prefWidth="84.0" text="choose file" />
                  <Button fx:id="slowButton" mnemonicParsing="false" onAction="#slowDown" prefHeight="25.0" prefWidth="84.0" text="&lt;&lt;" />
                  <Button fx:id="defaultSpeedButton" mnemonicParsing="false" onAction="#defaultSpeed" prefHeight="25.0" prefWidth="74.0" text="default" />
                  <Button fx:id="fastButton" mnemonicParsing="false" onAction="#speedUp" prefHeight="25.0" prefWidth="84.0" text="&gt;&gt;" />
                  <Button fx:id="screenRationButton" mnemonicParsing="false" onAction="#changeRatio" prefHeight="25.0" prefWidth="84.0" text="fit" />
                  <Slider fx:id="volumeSlider" prefHeight="14.0" prefWidth="120.0" />
               </children>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </HBox>
         </children>
      </VBox>
   </bottom>
   <center>
      <StackPane fx:id="stackPane" layoutX="50.0" prefHeight="314.0" prefWidth="600.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER">
         <children>
            <MediaView fx:id="mediaView" fitHeight="350.0" fitWidth="600.0">
               <viewport>
                  <Rectangle2D />
               </viewport>
            </MediaView>
         </children>
      </StackPane>
   </center>
</BorderPane>
