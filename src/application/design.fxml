<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <bottom>
      <VBox prefHeight="58.0" prefWidth="600.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
         <children>
            <Slider fx:id="statusSlider" onMousePressed="#seekDuration" prefHeight="56.0" prefWidth="600.0" />
            <HBox alignment="TOP_CENTER" prefHeight="57.0" prefWidth="600.0">
               <children>
                  <Button fx:id="previousButton" mnemonicParsing="false" onAction="#previous" prefHeight="25.0" prefWidth="60.0">
                     <graphic>
                        <ImageView fitHeight="26.0" fitWidth="43.0" onMouseClicked="#previous" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/rightNext.PNG" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Button fx:id="play_pauseButton" mnemonicParsing="false" onAction="#play_pause" prefHeight="25.0" prefWidth="60.0" text="play" />
                  <Button fx:id="nextButton" mnemonicParsing="false" onAction="#next" prefHeight="25.0" prefWidth="60.0">
                     <graphic>
                        <ImageView fitHeight="26.0" fitWidth="34.0" onMouseClicked="#next" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/leftNext.PNG" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Button fx:id="chooseFileButton" mnemonicParsing="false" onAction="#chooseFile" prefHeight="25.0" prefWidth="60.0">
                     <graphic>
                        <ImageView fitHeight="26.0" fitWidth="34.0" onMouseClicked="#chooseFile" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/folder.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Button fx:id="slowButton" mnemonicParsing="false" onAction="#slowDown" prefHeight="25.0" prefWidth="60.0" text="&lt;&lt;" />
                  <Button fx:id="defaultSpeedButton" mnemonicParsing="false" onAction="#defaultSpeed" prefHeight="25.0" prefWidth="60.0" text="0 Rate" />
                  <Button fx:id="fastButton" mnemonicParsing="false" onAction="#speedUp" prefHeight="25.0" prefWidth="60.0" text="&gt;&gt;" />
                  <Button fx:id="screenRationButton" mnemonicParsing="false" onAction="#changeRatio" prefHeight="25.0" prefWidth="60.0" text="Fit" />
                  <Slider fx:id="volumeSlider" prefHeight="14.0" prefWidth="120.0" value="50.0" />
                  <Button fx:id="muteButton" mnemonicParsing="false" onAction="#mute" prefHeight="25.0" prefWidth="60.0" text="mute" />
               </children>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </HBox>
         </children>
      </VBox>
   </bottom>
   <center>
      <StackPane fx:id="stackPane" layoutX="50.0" prefHeight="314.0" prefWidth="600.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER">
         <children>
            <MediaView fx:id="mediaView" fitHeight="350.0" fitWidth="600.0" onDragDropped="#OnDragDropped" onDragOver="#OnDragOverMedia">
               <viewport>
                  <Rectangle2D />
               </viewport>
            </MediaView>
         </children>
      </StackPane>
   </center>
</BorderPane>
